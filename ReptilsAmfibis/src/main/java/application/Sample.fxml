            <Label layoutX="44.0" layoutY="215.0" text="Nom" />
            <TextField fx:id="txtNom" layoutX="96.0" layoutY="211.0" onInputMethodTextChanged="#habilitaDesa" prefHeight="25.0" prefWidth="181.0" />
            <Label layoutX="43.0" layoutY="267.0" text="Especia" />
